<div class="row">
	<div class="span12">
		<div class="comment">
			
			<div class="comment_author">
				<h3><%=comment.user.name %></h3><%= comment.user.title %>
			</div>
			<div class="comment_text">
				<p><%= comment.text %></p>
			</div>
			<div class="comment_actions">
				<a class="btn btn-mini" href=<%= new_startup_discussion_comment_path(@startup, @discussion, :parent_id =>comment)%>>
					  reply
				</a>
				<% if can? :update, comment %>
				    <a class="btn btn-mini" href=<%= edit_startup_discussion_comment_path(@startup, @discussion, comment)%>>
					  edit
					</a>
				<% end %>
				
				<% if can? :destroy, comment %>
				<%= link_to "delete", [@startup, @discussion, comment], confirm: 'Are you sure?', :class => "btn btn-mini", method: :delete%>
				<% end %>
			</div>
		</div>
	</div>

	
</div>