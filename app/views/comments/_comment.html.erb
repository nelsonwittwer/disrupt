<div class="row">
	<div class="span12">
		<div class="comment">
			<div class="comment_author">
				<h4><%=display_user(comment.user)%></h4>
			</div>
			<div class="comment_text">
				<div class="vote-arrows">
					<%= link_to (raw("<i class='icon-caret-up vote-arrows'></i>")), vote_startup_discussion_comment_path(@startup, @discussion, comment, type: "up"), method: "post" %>
					<%= link_to (raw("<i class='icon-caret-down vote-arrows'></i>")), vote_startup_discussion_comment_path(@startup, @discussion, comment, type: "down"), method: "post" %>
		        </div>
		        <%= pluralize comment.reputation_value_for(:votes).to_i, "vote" %>
				<p><%= comment.text %></p>
			</div>
			<div class="comment_actions">
				<a class="btn btn-mini" href=<%= new_startup_discussion_comment_path(@startup, @discussion, :parent_id =>comment)%>>
					  reply
				</a>
				<% if can? :update, comment %>
				    <a class="btn btn-mini" href=<%= edit_startup_discussion_comment_path(@startup, @discussion, comment)%>>
					  edit
					</a>
				<% end %>
				
				<% if can? :destroy, comment %>
				<%= link_to "delete", [@startup, @discussion, comment], confirm: 'Are you sure?', :class => "btn btn-mini", method: :delete%>
				<% end %>
			</div>
		</div>
	</div>
</div>