<script type="text/javascript">
    mixpanel.track("Landing Page Loaded")
</script>
<div class="row">
	<% if user_signed_in? == false%>
		<div class="span12 landing_hero top-rounded-corners shadow">
			<div class="row visible-desktop">
				<div class="span2 disruptage">
					<h1>disruptage.</h1>
				</div>
				<div class="span4 landing_hero_description">
					<h1>discuss today's most disruptive companies.</h1>
					<div class="landing_signup_button">
						<%= link_to "sign up!", signup_path, :class => "btn btn-large btn-warning" %>
						<h2>always free.</h2>
					</div>
				</div>
			</div>
			<div class="row tablet_header visible-tablet">
				<div class="span2 disruptage">
					<h1>disruptage.</h1>
				</div>
				<div class="span5 landing_hero_description">
					<h1>discuss today's most disruptive companies.</h1>
					<div class="landing_signup_button">
						<%= link_to "sign up!", signup_path, :class => "btn btn-large btn-warning" %>
						<h2>always free.</h2>
					</div>
				</div>
			</div>
			<div class="row phone_header visible-phone">
				<div class="span10 offset2 disruptage">
					<h1>disruptage.</h1>
				</div>
				<div class="row">
					<div class="span6 landing_signup_button">
						<%= link_to "sign up!", signup_path, :class => "btn btn-large btn-warning" %>
						<h2>always free.</h2>
					</div>
				</div>
				<div class="row">
					<div class="span12 landing_hero_description_mobile">
						<h1>discuss today's most disruptive companies.</h1>
					</div>
				</div>
			</div>

			<div class="row spotlight">
				<div class="span12 startup_of_the_week hidden-phone">
					<h2><i class="icon-chevron-down"></i>   this week's startup   <i class="icon-chevron-down"></i></h2>
				</div>
			</div>

			<% if Startup.last %> 
				<%= render 'startups/startup_index', :startup => Startup.last %>
			<% end %>

			<div class="row">
				<div class="span12 topics-splash">
					<div class="row">
						<div class="span7">
							<h2><i>We</i> showcase amazing disruptive companies, <i>you</i> share your insights about marketing, code, sales, or whatever you know.</h2><h2 id="learn_a_ton"> <i>We</i> all learn a ton. </h2>
						</div>
						<div class="span4 hidden-phone">
							<%= image_tag "Topics-Splash.png"%>
						</div>
					</div>
				</div>
			</div>
	<% end %>

	<% if user_signed_in? == true && Startup.last%>
		<div class="span12 landing_hero top-rounded-corners shadow">
			<%= render 'startups/startup_index', :startup => Startup.last %>
	<% end %>

	<% if Startup.last && Startup.last.discussions.first %>
			<% @startup = Startup.last %>
			<div class="row">
				<div class="span12 home_startup_logo">
					<%= image_tag @startup.startup_logo.url %>
				</div>
			</div>
	        <% @startup.discussions.each do |d| %>
				<% @d = d %>
				<%= render 'startups/discussion', :locals => {:startup =>@startup, :discussion => @d} %>
			<% end %>
		</div>
	<% end %>
</div>





