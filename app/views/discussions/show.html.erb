<% provide(:title, @discussion.title) %>

<div class="row">
	<div class="span12 show_discussion top-rounded-corners shadow">
		<div class="row">
	      <div class="span12 su_title_bar top-rounded-corners">
	        <div class="su_logo_div">
	          <%= link_to (image_tag @startup.startup_logo.url, :class => "su_logo"), startup_path(@startup) %>
	        </div>
	        <div class="su_description">
	          <%= @startup.description %>
	        </div>
	      </div>
	    </div>
		<div class="row">
			<div class="span12">
				<div class="discussion_title_box">

					<div class="row">
						<div class="span1">
							<div class="topic-icon rounded">
				              <%= image_tag @discussion.topic.topic_icon.url %>
				            </div>
				        </div>
			            <div class="span10"> 
			            	<div class="row">
			            		<div class="span10 discussion_title"> 
									<h2><%=@discussion.title %></h2>
									<p><%= @discussion.discussion_body if @discussion.discussion_body%></p>
									<div class="row">
										<div class="span1">
											<%= display_avatar_thumb(@discussion.user) %>
										</div>
										<div class="span9">
											<h4><%= link_to @discussion.user.name, @discussion.user %></h4> 
											<div class="row">
												<div class="span8">
													<p><%=@discussion.user.title %></p>
												</div>
											</div>
										</div>
									</div>
									<div class ="row">
										<div class="span10">
											<%if can? :update, @discussion %> 
											<p><%= link_to "Edit this Discussion", edit_startup_discussion_path(@startup, @discussion) %></p>
											<% end %>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		

		<div class="row">
			<div class="span12">
				<div class="discussion_icon">
					  <div class="disruptage_button rounded-corners">
				          <i class="icon-comments"></i>
				          <%= link_to "comment",new_startup_discussion_comment_path(@startup, @discussion)%>
				      </div>
	  		    </div>
			</div>
		</div>

		<div class="row">
			<div class="span12">
				<div class="discussion_comment_parent rounded-corners">	
					<%= nested_comments @comments.arrange(:order => :created_at) %>
				</div>
			</div>
		</div>
	</div>
</div>
