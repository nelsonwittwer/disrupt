<% @startups.each do |startup| %>
    <div class="row startup_index_row shadow rounded-corners">
        <div class="span12">
            <div class="row startup_index_row_2">
                <div class="span9 startup_index_picture">
                    <%= link_to (image_tag startup.pictures.first.url, :class => "rounded-left-side"), startup %>
                </div>
                <div class="span3 startup_index_meta">
                    <div class="startup_index_logo"><%= link_to (image_tag startup.logo.url), startup %></div>
                    <p class="su_index_descr"><%= startup.description %></p>
                    <h3><%= startup.discussions.count %> Discussions</h3></br >

                    <% if can? :update, startup %>
                        <%= link_to 'Edit', edit_startup_path(startup) %>
                    <% end %>
                    <% if can? :destroy, startup %>    
                        <%= link_to 'Destroy', startup, confirm: 'Are you sure?', method: :delete %>
                    <% end %>
                </div>
             </div>       
        </div> 
    </div> 
<% end %>   


<% if can? :create, Startup %>
    <%= link_to 'New Startup', new_startup_path %>
<% end %>